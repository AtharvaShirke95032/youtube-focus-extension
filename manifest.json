{
  "manifest_version": 3,
  "name": "YouTube Focus Extension",
  "version": "1.0",
  "description": "Reminds you to avoid distractions on YouTube.",
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
